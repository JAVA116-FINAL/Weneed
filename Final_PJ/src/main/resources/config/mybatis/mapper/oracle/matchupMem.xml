		from 
		(
	        select rownum as rnum, v.* from matchupMemSearchView v 
	        <![CDATA[
	        where cnt>0
	        ]]>
		)m
		<![CDATA[
		where rnum > #{viewMoreSize}
		and rnum <= #{viewMoreSize}+5
		]]>
	</select>
